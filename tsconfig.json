{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules"]
}
